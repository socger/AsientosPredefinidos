<table>
        
    <column>
        <name>codcontrapartida</name>
        <type>character varying(15)</type>
    </column>
    <column>
        <name>codsubcuenta</name>
        <type>character varying(15)</type>
        <null>NO</null>
    </column>
    <column>
        <name>concepto</name>
        <type>character varying(255)</type>
    </column>

    <column>
        <name>debe</name>
        <type>character varying(50)</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>haber</name>
        <type>character varying(50)</type>
        <null>NO</null>
        <default>0</default>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
    </column>
    <column>
        <name>idasientopre</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>orden</name>
        <type>integer</type>
        <null>NO</null>
        <default>0</default>
    </column>
    
    
    <constraint>
        <name>asientospre_lineas_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    
    
    <constraint>
        <name>ca_asientospre_lineas_asientospre</name>
        <type>FOREIGN KEY (idasientopre) REFERENCES asientospre (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>
